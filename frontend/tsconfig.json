{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext", // Compatible avec Vite et import.meta
        "moduleResolution": "node", // RÃ©solution des modules en mode node
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ] // Alias @/* pointant vers ./src/*
        },
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "resolveJsonModule": true
    },
    "vueCompilerOptions": {
        "target": 3.3
    },
    "include": [
        "src/**/*",
        "src/types/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}