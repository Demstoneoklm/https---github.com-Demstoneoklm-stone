{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
            "vue"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "resolveJsonModule": true
    },
    "vueCompilerOptions": {
        "target": 3.3
    },
    "include": [
        "src/**/*",
        "src/types/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}