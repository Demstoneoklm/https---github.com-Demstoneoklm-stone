{
  "name": "stone-admin-backend",
  "version": "1.0.0",
  "description": "Backend API pour Stone Admin",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "sequelize",
    "mysql",
    "jwt",
    "authentication"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "sequelize": "^6.35.0",
    "mysql2": "^3.6.5",
    "zod": "^3.22.4",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "helmet": "^7.1.0",
    "pdf-lib": "^1.17.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/cookie-parser": "^1.4.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "rimraf": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/mime-types": "^2.1.4",
    "@types/axios": "^0.14.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
